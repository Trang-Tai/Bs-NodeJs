<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    table,
    th,
    td {
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>

<body>
    <table style="width:100%">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
                <td>
                    <%= dataTable[i].firstName %>
                </td>
                <td>
                    <%= dataTable[i].lastName %>
                </td>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].address %>
                </td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>" type="button">Edit</a>
                    <a href="/delete-crud?id=<%= dataTable[i].id %>" type="button" class="btn-delete">Delete</a>
                </td>
            </tr>
            <% } %>
    </table>
    <form class="form-del" method="POST"></form>
</body>
<script>
    const btnDels = document.querySelectorAll('.btn-delete');
    const formDel = document.querySelector('.form-del');
    Array.from(btnDels).forEach((btnDel, index) => {
        if (btnDel) {
            btnDel.addEventListener("click", function (event) {
                event.preventDefault();
                let moveContentHrefToAction = btnDel.getAttribute('href');
                formDel.action = moveContentHrefToAction;
                formDel.submit();
            })
        }
    })
</script>

</html>